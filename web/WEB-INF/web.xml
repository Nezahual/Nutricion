<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Inicio</servlet-name>
        <servlet-class>Controladores.Inicio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Buscar</servlet-name>
        <servlet-class>Controladores.Buscar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResultadosBusqueda</servlet-name>
        <servlet-class>Controladores.ResultadosBusqueda</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Detalle</servlet-name>
        <servlet-class>Controladores.Detalle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Controladores.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HacerLogin</servlet-name>
        <servlet-class>Controladores.HacerLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Controladores.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Carrito</servlet-name>
        <servlet-class>Controladores.Carrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnadirCarrito</servlet-name>
        <servlet-class>Controladores.AnadirCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerCarrito</servlet-name>
        <servlet-class>Controladores.VerCarrito</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Inicio</servlet-name>
        <url-pattern>/Inicio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Buscar</servlet-name>
        <url-pattern>/Buscar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResultadosBusqueda</servlet-name>
        <url-pattern>/ResultadosBusqueda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Detalle</servlet-name>
        <url-pattern>/Detalle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HacerLogin</servlet-name>
        <url-pattern>/HacerLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Carrito</servlet-name>
        <url-pattern>/Carrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnadirCarrito</servlet-name>
        <url-pattern>/AnadirCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerCarrito</servlet-name>
        <url-pattern>/VerCarrito</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Inicio</welcome-file>
    </welcome-file-list>
</web-app>

